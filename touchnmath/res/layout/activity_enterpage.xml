<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_page_bg_01"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical" >
          
		    <Button
		        android:id="@+id/enterpage_login"
		        android:layout_width="match_parent"
		        android:layout_height="45dp"
		        android:layout_marginLeft="0dp"
		        android:background="@drawable/enterpage_login" />
		    
		    <Button
		        android:id="@+id/enterpage_join"
		        android:layout_width="wrap_content"
		        android:layout_height="45dp"
		        android:layout_marginStart="0dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/enterpage_join" />

		    <Button
		        android:id="@+id/enterpage_naver"
		        android:layout_width="wrap_content"
		        android:layout_height="45dp"
		        android:layout_marginStart="0dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/enterpage_naver" />

		</LinearLayout>

</LinearLayout>