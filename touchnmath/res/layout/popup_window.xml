<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_01" >
    
    <LinearLayout
        android:id="@+id/row_rel01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/row_rel02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:orientation="horizontal">
        
            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:background="@drawable/bg_menu_back" />
	            
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentStart="true"
		            android:layout_alignParentTop="true"
		            android:layout_marginLeft="30dp"
		            android:layout_marginTop="20dp"
		            android:background="@drawable/main_menu_logo"
		            android:scaleType="fitXY" />
        
        </LinearLayout>
        
        <!-- 터치앤매스 소개 -->
				<ImageView
		        android:id="@+id/popupView1"
		        android:layout_width="262dp"
		        android:layout_height="60dp"
		        android:layout_alignStart="@+id/btn_close"
		    		android:layout_below="@+id/btn_close"
		        android:layout_marginTop="15dp"
		        android:background="@drawable/menu_01_off"
		        android:scaleType="fitXY" 
		        android:onClick="onClick"/>
				
				<!-- 학년보기 -->
				<ImageView
				    android:id="@+id/popupView2"
				    android:layout_width="262dp"
				    android:layout_height="60dp"
				    android:layout_below="@+id/popupView1"
				    android:background="@drawable/menu_02_off"
				    android:onClick="onClick"
				    android:scaleType="fitXY" />
				
				<!-- 단원목차보기 -->
				<ImageView
				    android:id="@+id/popupView3"
				    android:layout_width="262dp"
				    android:layout_height="60dp"
				    android:layout_below="@+id/popupView2"
				    android:background="@drawable/menu_03_off"
				    android:onClick="onClick"
				    android:scaleType="fitXY" />
		
				<!-- 친구에게 추천하기 -->
				<!-- <ImageView
				    android:id="@+id/popupView5"
				    android:layout_width="262dp"
				    android:layout_height="60dp"
				    android:layout_below="@+id/popupView3"
				    android:background="@drawable/menu_05_off"
				    android:onClick="onClick"
				    android:scaleType="fitXY" /> -->

				<!-- 설정 -->
				<ImageView
				    android:id="@+id/popupView4"
				    android:layout_width="262dp"
				    android:layout_height="60dp"
				    android:layout_below="@+id/popupView5"
				    android:background="@drawable/menu_04_off"
				    android:onClick="onClick"
				    android:scaleType="fitXY" />

    </LinearLayout>

</LinearLayout>