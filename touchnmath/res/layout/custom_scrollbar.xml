<?xml version="1.0" encoding="utf-8"?>
<!-- 커스텀 스크롤 바 프래그먼트 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_scrollview_layout"
    android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#00000099">
	 	
    <ImageView
        android:id="@+id/custom_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:background="@drawable/scroll_line_02"
        android:contentDescription="@string/activity_no_image" />
 	
    <ImageView
        android:id="@+id/custom_scroll_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/scroll_handler"
        android:contentDescription="@string/activity_no_image" />
    
</FrameLayout>
